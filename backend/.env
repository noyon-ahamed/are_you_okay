# Server Config
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/are-you-okay

# JWT Authentication
JWT_SECRET=your_secure_random_secret_key_min_32_chars
JWT_EXPIRE=30d

# Firebase (Optional - for FCM push notifications only)
# Path to service account key file
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
# Or content as string/base64 if preferred, but path is common for admin sdk

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# SSLCommerz
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_IS_SANDBOX=true

# Twilio (SMS & Voice)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=...

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-...

# Email (Nodemailer - e.g., using Gmail or SMTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@areyouokay.app

# Earthquake API
# Example: USGS or other provider
EARTHQUAKE_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query

# Job Scheduling
ENABLE_JOBS=true
